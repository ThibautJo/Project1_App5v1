<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Oefening4"
    tools:showIn="@layout/activity_oefening4">

    <LinearLayout
        android:id="@+id/Oef4ParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/oef4Titel"
            android:text="duikbril"
            android:textAlignment="center"
            android:textSize="28dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/picture1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/oef4_image_background"
                android:cropToPadding="true"
                android:padding="2dp"
                android:tag="black"
                android:scaleType="centerInside"
                android:src="@drawable/duikbril" />


            <ImageView
                android:id="@+id/picture2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/oef4_image_background"
                android:cropToPadding="true"
                android:padding="2dp"
                android:tag="black"
                android:scaleType="centerInside"
                android:src="@drawable/duikbril" />


        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/picture3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/oef4_image_background"
                android:cropToPadding="true"
                android:padding="2dp"
                android:tag="black"
                android:scaleType="centerInside"
                android:src="@drawable/duikbril" />


            <ImageView
                android:id="@+id/picture4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/oef4_image_background"
                android:cropToPadding="true"
                android:padding="2dp"
                android:tag="black"
                android:scaleType="centerInside"
                android:src="@drawable/duikbril" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>